{
  "compilerOptions": {
    "rootDir": "./lib",
    "outDir": "./dist",
    "lib": [
      "es2020",
      "dom"
    ],
    "declarationDir": "./dist",
    "module": "CommonJS",
    "target": "ES2019",
    "baseUrl": "./lib",
    "paths": {
      "@components/*": ["components/*"],
      "@constants/*": ["constants/*"],
      "@lib/*": ["lib/*"]  // Optional: might be useful for other imports
    },
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "lib/**/*",
  ],
  "exclude": [
    "node_modules",
    "cdk.out",
    "dist"
  ],
}
